# Sports Event Tracker Environment Variables
# Copy this file to .env.local and fill in your values

# ===================================
# Database (Supabase)
# ===================================
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# ===================================
# Authentication (Clerk)
# ===================================
# Get these from: https://dashboard.clerk.com/apps/[app-id]/instances/[instance-id]/api-keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-key
CLERK_SECRET_KEY=sk_test_your-key
# Clerk URLs (customize as needed)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# ===================================
# Payment Processing (Stripe)
# ===================================
# Get these from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-key
STRIPE_SECRET_KEY=sk_test_your-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
# Stripe Price IDs
STRIPE_PRICE_ID_MONTHLY=price_monthly_id
STRIPE_PRICE_ID_YEARLY=price_yearly_id

# ===================================
# Analytics (PostHog)
# ===================================
# Get these from: https://app.posthog.com/project/settings
NEXT_PUBLIC_POSTHOG_KEY=phc_your-project-api-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
# For EU hosting use: https://eu.posthog.com

# ===================================
# Error Tracking (Sentry)
# ===================================
# Get these from: https://sentry.io/settings/[org]/projects/[project]/keys/
NEXT_PUBLIC_SENTRY_DSN=https://your-key@o0.ingest.sentry.io/0
SENTRY_ORG=your-org-slug
SENTRY_PROJECT=your-project-slug
SENTRY_AUTH_TOKEN=your-auth-token
# Sentry settings
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_REPLAY_SESSION_SAMPLE_RATE=0.1
SENTRY_REPLAY_ON_ERROR_SAMPLE_RATE=1.0

# ===================================
# Email Service (SendGrid)
# ===================================
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your-api-key
SENDGRID_FROM_EMAIL=notifications@yourdomain.com
SENDGRID_FROM_NAME=Sports Event Tracker

# ===================================
# SMS Service (Twilio)
# ===================================
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACyour-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===================================
# External Sports APIs
# ===================================
# F1 API
F1_API_KEY=your-f1-api-key
F1_API_BASE_URL=https://api.formula1.com

# Formula E API
FORMULA_E_API_KEY=your-fe-api-key
FORMULA_E_API_BASE_URL=https://api.fiaformulae.com

# MotoGP API
MOTOGP_API_KEY=your-motogp-api-key
MOTOGP_API_BASE_URL=https://api.motogp.com

# UFC API
UFC_API_KEY=your-ufc-api-key
UFC_API_BASE_URL=https://api.ufc.com

# Football APIs
FOOTBALL_API_KEY=your-football-api-key
FOOTBALL_API_BASE_URL=https://api.football-data.org

# IndyCar API
INDYCAR_API_KEY=your-indycar-api-key
INDYCAR_API_BASE_URL=https://api.indycar.com

# WEC/IMSA API
WEC_API_KEY=your-wec-api-key
WEC_API_BASE_URL=https://api.fiawec.com

# ===================================
# Push Notifications
# ===================================
# Web Push (VAPID Keys)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@yourdomain.com

# Firebase Cloud Messaging (for mobile)
FCM_SERVER_KEY=your-fcm-server-key
NEXT_PUBLIC_FCM_VAPID_KEY=your-fcm-vapid-key

# ===================================
# Redis (for caching and queues)
# ===================================
REDIS_URL=redis://localhost:6379
# For production use Redis Cloud/Upstash
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token

# ===================================
# Application Settings
# ===================================
# Node environment
NODE_ENV=development

# Next.js
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Cache TTL (in seconds)
CACHE_TTL_EVENTS=3600
CACHE_TTL_TEAMS=86400
CACHE_TTL_API_RESPONSES=1800

# Feature Flags
NEXT_PUBLIC_FEATURE_NOTIFICATIONS=true
NEXT_PUBLIC_FEATURE_SYNC=true
NEXT_PUBLIC_FEATURE_PREMIUM=true

# ===================================
# Development Tools
# ===================================
# Enables debug mode for various services
DEBUG=false

# Mock API responses in development
USE_MOCK_DATA=false

# Database migrations
RUN_MIGRATIONS_ON_START=true

# ===================================
# Mobile App Configuration
# ===================================
# Expo (for React Native)
EXPO_PUBLIC_API_URL=http://localhost:3000/api
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# ===================================
# Desktop App Configuration
# ===================================
# Electron
ELECTRON_IS_DEV=true
ELECTRON_ENABLE_LOGGING=true